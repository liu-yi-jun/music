page::before {
  content: ' ';
  position: fixed;
  z-index: -999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0, 78, 207, 1), rgba(36, 96, 212), rgba(162, 126, 219, 1));

  background-size: 100% 100%;
}

.blank {
  height: 200rpx;
}

.canvas {
  position: absolute;
  top: -1000px;
  background-color: gray;
  width: 100vw;
  height: 100vh;
}

.hover {
  background: rgba(255, 255, 255, 0.1);
}