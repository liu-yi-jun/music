/* pages/tool/tool.wxss */
.tool {
  width: 100%;
  height: 100%;
}

.head {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 14rpx 12rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title::before {
  content: "";
  display: block;
  position: absolute;
  height: 80%;
  width: 1rpx;
  background-color: #a3a3a4;
  left: 0rpx;
  top: 0rpx;
  bottom: 0rpx;
  margin: auto;
}

.title {
  display: flex;
  flex-direction: column;
  /* border-left: 1rpx #a3a3a4 solid; */
  padding-left: 14rpx;
  position: relative;
}

.title-top {
  color: #fff;
  font-size: 34rpx;
}

.title-bottom {
  color: #cacbcb;
  font-size: 22rpx;
}

.wrap {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 14rpx 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


.logo-search {
  display: flex;
  align-items: center;
}

.logo {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.search {
  width: 340rpx;
  height: 60rpx;
  box-sizing: border-box;
  color: black !important;
  padding: 0 30rpx 0 60rpx;
  background: #e2e2e2;
  border-radius: 999rem;
}

.searchLog {
  width: 30rpx;
  height: 32rpx;
  position: absolute;
  left: 18rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}

.searchWrap {
  position: relative;
}


