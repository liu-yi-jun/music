/* pages/tool/tool.wxss */
.bg {
  content: ' ';
  position: fixed;
  z-index: -999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.tool {
  width: 100%;
  height: 100%;
}



.wx-switch-input {
  border: 1rpx solid #b37ae5 !important;
  width: 80rpx !important;
  height: 40rpx !important;
  background: #b37ae5 !important;
}

/* off */

.wx-switch-input::before {
  width: 80rpx !important;
  height: 40rpx !important;
}

/* 圆 */

.wx-switch-input::after {
  width: 40rpx !important;
  height: 40rpx !important;
}

.barWrap {
  padding-left: 40rpx;
  box-sizing: border-box;
  width: 100%;
  position: relative;
  top: -26rpx;
  z-index: 999999;
}


/* 加载中 */
.loading>.weui-loadmore>.weui-loading {
  width: 60rpx;
  height: 60rpx;
}

.loading>.weui-loadmore>.weui-loadmore__tips {
  color: white;
}

.issueDynamic {
  width: 233rpx;
  height: 233rpx;
  position: fixed;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  right: -16rpx;
}


.issueDynamicInner {
  width: 70%;
  height: 70%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}