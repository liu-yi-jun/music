/* pages/tool/analysis/analysis.wxss */
.title {
  margin-left: 30rpx;
  font-size: 34rpx;
}

.analysis {
  color: white;
}

.wrap {
  width: 80%;
  position: absolute;
  left: 50%;
  top: 450rpx;
  transform: translateX(-50%);
}

.part {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
}

.bar {
  margin-top: 70rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 120rpx;
  font-size: 36rpx;
}

.bar>view {
  flex-grow: 1;
  text-align: center;
}

canvas {
  margin-top: 20rpx;
}


/* ......................................... */
.header {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: white;
}

.middle {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  color: white;
}

.left {
  padding: 6rpx 18rpx;
  border: 1px solid white;
  border-radius: 999rem;
  font-size: 28rpx;
}

.bar {
  display: flex;
  align-items: center;
}


.wx-switch-input {
  border: 1rpx solid #b37ae5 !important;
  width: 90rpx !important;
  height: 50rpx !important;
  background: #b37ae5 !important;
}

/* off */

.wx-switch-input::before {
  width: 90rpx !important;
  height: 50rpx !important;
}

/* åœ† */

.wx-switch-input::after {
  width: 50rpx !important;
  height: 50rpx !important;
}

.switchWarp {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  color: white;
  font-size: 24rpx;
}


.letter {
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.middleLetter {
  display: flex;
  /* line-height: 0rpx; */
  width: 190rpx;
  height: 200rpx;
  position: relative;
}

.leftLetter {
  font-size: 200rpx;
  line-height: 195rpx;
}
.rightLetter {
  font-size: 72rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
 
}

.stringWrap {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 50rpx;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  position: relative;
}

.string {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.circular {
  width: 65rpx;
  height: 65rpx;
  border-radius: 999rem;
  background-color: rgba(255, 255, 255, 0.5);
  text-align: center;
  line-height: 65rpx;
  color: white;
  font-size: 28rpx;
}

.line {
  background-color: white;
  height: 240rpx;
  width: 4rpx;
  margin-top: 70rpx;
}

.right>text {
  margin-right: 10rpx;
  font-size: 28rpx;
}

.header>view:last-child {
  font-size: 28rpx;
  color: #C4C5C6;
}

.column {
  width: 80%;
  left: 50%;
  transform: translateX(-50%);
  position: absolute;
  top: 100rpx;
  height: 2rpx;
  background-color: white;
}
.topLetter,.bottomLetter {
  line-height: 115rpx;
  position: absolute;
}
.topLetter {
  right: 0;
  top: -13rpx;
}
.bottomLetter {
  right: 0;
  bottom: 0;
}