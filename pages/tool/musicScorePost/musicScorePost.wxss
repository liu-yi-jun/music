/* pages/tool/musicScorePost/musicScorePost.wxss */

.issuePuchCard {
  width: 100%;
  height: 100%;
}

.card {
  position: absolute;
  box-sizing: border-box;
  left: 0;
  right: 0;
  width: 606rpx;
  height: 1037rpx;
  background-color: #A97EDE;
  border-radius: 40rpx;
  top: 13.75%;
  margin: auto;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(0, 0, 0, .1);
  /* justify-content: center; */
}

.part {

  color: white;
  display: flex;
  height: 23.5%;
  width: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}


.part .btn {
  background: white;
  color: #727171;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  margin-top: 15rpx;
}

/* 
.uploadData {
  margin-bottom: 200rpx;
} */

.okLogo {
  width: 272rpx;
  height: 272rpx;
  border-radius: 50%;
  position: absolute;
  right: -26rpx;
  bottom: -20rpx;
}

.dataImg {
  width: 500rpx;
  height: 359rpx;
  position: relative;
  /* margin: 20rpx auto 40rpx; */
  /* border-radius: 10rpx; */
}

.video {
  width: 500rpx;
  height: 359rpx;
  position: relative;
}

.okInner {
  width: 70% !important;
  height: 70% !important;
  left: 50% !important;
  background:transparent;
  top: 50% !important;
  transform: translate(-50%, -50%) !important;
  position: absolute !important;
}

.basicWrap {
  width: 500rpx;
  margin: auto;
  color: white;
  margin-top: 0rpx;
  font-size: 28rpx;
}

.row {
  display: flex;
  margin-top: 34rpx;
  align-items: flex-end;
}

.row>text {
  flex-shrink: 0;
  display: inline-block;
  /* width: 152rpx; */
}

.row>input {
  border-bottom: 1rpx solid white;
  margin-left: 10rpx;
  flex-grow: 1;
}

.topPart {
  padding-top: 74rpx;
}

.bottomPart {
  padding-top: 40rpx;
}

.topUpload {
  margin-bottom: 60rpx;
}

.bottomUpload {
  margin-bottom: 90rpx;
}

.delete {
  position: absolute;
  right: 8rpx;
  top: 0rpx;
  font-size: 42rpx;
  z-index: 20;
  /* color: rgba(191, 191, 191, 0.8); */
}
.video .delete {
  right: 8rpx;
  top: 30rpx;
}
@media screen and (max-aspect-ratio: 1/2) {

  .card {
    width: 84.1%;
    height: 1100rpx;
    position: absolute;
    background: #a97ede;
    border-radius: 60rpx;
    margin: auto;
    top: 18.58%;
    left: 0;
    right: 0;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .part {
    height: 24.8%;
  }


}