<!--pages/tool/tool.wxml-->
<view catchtap="tap" class="tool">
  <navBar   backgroundColorTop='rgba(0,0,0,0)' background='rgba(0,0,0,0)' iconTheme='white'></navBar>
  <view class="head">
    <view class="title">
      <text class="title-top" catchtap="play">搜索曲谱</text>
      <text class="title-bottom">Search Score</text>
    </view>
  </view>
  <view class="wrap">
    <view class="logo-search">
      <image class="logo" src="http://use.eigene.cn/picture.png" catchtap="start" ></image>
      <view class="searchWrap">
        <input class="search" value="{{value}}" bindconfirm="confirm">
        </input>
        <image class="searchLog" src="http://cdn.eigene.cn/search.png"></image>
      </view>
    </view>
  </view>
  <scroll-view enable-back-to-top="{{true}}" bindscrolltolower="scrolltolower" scroll-with-animation   scroll-y style="height:{{excludeHeight-172}}rpx">
    <view data-index="{{index}}" class="circular" wx:for="{{circulars}}" style="{{item.style}}" catchtap="goTapPractice"
      data-src="{{item.src}}">
      <view class="top top{{index + 1}}" style="{{item.TextStyle}}">
        <!-- <text class="number">{{index + 1}}</text> -->
        <text class="name">{{item.tapTitle}}</text>
        <text class="author">{{item.author}}</text>
      </view>
    </view>
  </scroll-view>
  <showTabBar tabBarBtnShow="{{tabBarBtnShow}}">
  </showTabBar>
</view>