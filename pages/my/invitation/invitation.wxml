<!--pages/my/invitation/invitation.wxml-->
<view class="invitation">
  <navBar backgroundColorTop='rgba(0,0,0,0)' background='rgba(0,0,0,0)' back="{{true}}" iconTheme='white'
    bindback="handlerGobackClick"></navBar>
    <scroll-view bindscrolltolower="scrolltolower"  style="height: {{excludeHeight}}px;" scroll-y>
    <view class="information">
      <image class="backgroundImg" src="{{personal.bgWall}}" mode="aspectFill">
        <image wx:if="{{userId!==otherId}}" class="follow" catchtap="followUser" src="http://cdn.eigene.cn/invitation/follow{{personal.isFollow?'ed':''}}.png" ></image>
        <view class="backgroundWarp">
          <view class="avatarName">
            <image src="{{personal.avatarUrl}}" class="avatar" mode="aspectFill"></image>
            <text class="name">{{personal.nickName}}</text>
            <view class="nameBotoom">
              <text wx:if="{{personal.gender=== 1}}">♂</text>
              <text wx:if="{{personal.gender=== 2}}">♀</text>
              <text class="constellation" wx:if="{{personal.constellation}}">{{personal.constellation}}</text>
              <text wx:if="{{personal.age}}">{{personal.age}}岁</text>
            </view>
          </view>
        </view>
      </image>
      <view catchtap="goOtherHome" data-id="{{personal.groupId}}" class="organization" wx:if="{{personal.groupName}}">{{personal.groupName}}
        {{personal.groupDuty===0?'组长':(personal.groupDuty===1?'管理员':(personal.groupDuty===2?'组员':'申请中'))}}</view>
    </view>
    <view class="statistics">
      <view catchtap="goFansFollow" data-flag="fans">
        <text class="text">粉丝</text>
        <text class="number">{{personal.fans}}</text>
      </view>
      <view catchtap="goFansFollow" data-flag="follow">
        <text class="text">关注</text>
        <text class="number">{{personal.follows}}</text>
      </view>
      <view>
        <text class="text">帖子</text>
        <text class="number">{{personal.posts}}</text>
      </view>
    </view>
    <view class="bar">
      <view class="letter" catchtap="goPrivateLetter" wx:if="{{userId!==otherId}}">私信Ta</view>
      <view class="portion" catchtap="switchBtn" data-switchBtn="dynamic">
        <view class="square"></view>
        <view class="btn {{switchBtn === 'dynamic' ? 'active' : ''}}">动态</view>
      </view>
      <view class="portion" catchtap="switchBtn" data-switchBtn="issue">
        <view class="square"></view>
        <view class="btn {{switchBtn === 'issue' ? 'active' : ''}}">发布</view>
      </view>
    </view>
    <view class="list">
      <view hidden="{{switchBtn !== 'dynamic'}}">
        <dynamicList id="dynamicList" dynamics="{{dynamics}}" isInvitation="{{true}}"></dynamicList>
      </view>
      <view hidden="{{switchBtn !== 'issue'}}">
        <allianceList alliances="{{alliances}}"></allianceList>
      </view>
    </view>
  </scroll-view>
</view>