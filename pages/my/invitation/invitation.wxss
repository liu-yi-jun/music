/* pages/my/invitation/invitation.wxss */

.information {
  position: relative;
  height: 563rpx;
  width: 100%;
}


.number {
  color: white;
  font-size: 63rpx;
  margin-left: 10rpx;
}

.text {
  color:white;
  font-size: 28rpx;
}

.backgroundImg {
  width: 100%;
  height: 563rpx;
  border-bottom-left-radius: 110rpx;
  border-bottom-right-radius: 110rpx;
  position: relative;
}

.avatar {
  width: 158rpx;
  height: 158rpx;
  border-radius: 50%;
}

.name {
  font-size: 36rpx;
  font-weight: 800;
  line-height: 42rpx;
}

.nameBotoom {
  font-size: 22rpx;
  margin-top: 8rpx;
}
.nameBotoom>text {
  margin: 0 5rpx;
}
.shadow {
  position: absolute;
  left: 0px;
  bottom: 0px;
  width: 100%;
  height: 50%;
  background: linear-gradient(to top, rgba(0, 0, 0, 70%) 0%, rgba(0, 0, 0, 0) 100%);
}

/* .constellation {
  margin: 0 10rpx;
} */

.organization {
  position: absolute;
  left: 50%;
  text-align: center;
  transform: translate(-50%, 0);
  white-space: nowrap;
  padding: 8rpx 30rpx;
  bottom: -23rpx;
  z-index: 999;
  background-color: white;
  border-radius: 999rem;
  font-size: 22rpx;
  line-height: 24rpx;
}

.portion {
  padding: 0px 6rpx 4rpx;
  color: white;
}



.letter {
  position: absolute;
  right: 28rpx;
  color: white;
  top: -25rpx;
  font-size: 26rpx;
  border-radius: 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  box-shadow: 0rpx 0rpx 6rpx 6rpx rgba(0, 0, 0, 0.1);
  background-color: #aa7edf;
  width: 120rpx;
  text-align: center;
}


.active {
  border-bottom: 6rpx solid #aa7edf;
  font-weight: bold;
}

.square {
  width: 15rpx;
  height: 15rpx;
  margin-left: 40rpx;
  background-color: #aa7edf;
}

.statistics {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;

}
.avatarName {
  text-align: center;
  color: white;
  /* width: 220rpx; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 251rpx;
  transform:translateX(-50%);
  left: 50%;
  z-index: 99;
}

.list{
  box-sizing: border-box;
  /* padding-top: 60rpx; */
}

.follow {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  right: 50rpx;
  top: 13.94vh;
}

.issue {
  margin-left: 40rpx;
}
.navBar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.barWrap {
  padding: 0rpx 0rpx 0rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
}

.groupName {
  font-family: 'SH-bold';
}

.name-nameBotoom {
  margin-top: 16rpx;
  /* background-color: rgba(0, 0, 0, 0.3); */
  padding: 2rpx 40rpx;
  border-radius: 10rpx;
}