/* pages/my/invitation/invitation.wxss */

.information {
  position: relative;
  height: 563rpx;
  width: 100%;
}


.number {
  color: white;
  font-size: 62rpx;
  margin-left: 10rpx;
}

.text {
  color: #b6b7b7;
  font-size: 30rpx;
}

.backgroundImg {
  width: 100%;
  height: 563rpx;
  border-bottom-left-radius: 110rpx;
  border-bottom-right-radius: 110rpx;
  position: relative;
}

.avatar {
  width: 157rpx;
  height: 157rpx;
  border-radius: 50%;
}

.name {
   margin-top: 10rpx;
  font-size: 35rpx;
}

.nameBotoom {
  font-size: 22rpx;
}

.constellation {
  margin: 0 10rpx;
}

.icon {
  width: 13px;
  height: 18px;
  font-size: 13px;
  font-family: SourceHanSansCN-Regular-GBpc-EUC-H;
  line-height: 16px;
  color: rgba(255, 255, 255, 1);
  letter-spacing: 47px;
  opacity: 1;
}

.organization {
  position: absolute;
  left: 50%;
  text-align: center;
  transform: translate(-50%, 0);
  padding: 8rpx 30rpx;
  bottom: -23rpx;
  z-index: 999;
  background-color: white;
  border-radius: 999rem;
  font-size: 22rpx;
}

.portion {
  padding: 0px 6rpx 4rpx;
  color: white;
}



.letter {
  position: absolute;
  right: 28rpx;
  color: white;
  top: -25rpx;
  font-size: 26rpx;
  border-radius: 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  box-shadow: 0rpx 0rpx 6rpx 6rpx rgba(0, 0, 0, 0.1);
  background-color: #aa7edf;
  width: 120rpx;
  text-align: center;
}

.bar {
  position: relative;
  /* height: 85rpx; */
  display: flex;
  box-sizing: border-box;
  /* align-items: center; */
  width: 100%;
  padding: 0 30rpx;
  margin-top: 10rpx;
}

.active {
  border-bottom: 6rpx solid #aa7edf;
  font-weight: bold;
}

.square {
  width: 15rpx;
  height: 15rpx;
  margin-left: 40rpx;
  background-color: #aa7edf;
}

.statistics {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.avatarName {
  text-align: center;
  color: white;
  width: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 270rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 99;
}

.list{
  box-sizing: border-box;
  /* padding-top: 60rpx; */
}

.follow {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  right: 50rpx;
  top: 186rpx;
}

.issue {
  margin-left: 40rpx;
}
.navBar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}