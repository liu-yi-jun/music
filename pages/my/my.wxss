/* pages/my/my.wxss */

.my {
  min-height: 100%;
  width: 100%;
}

.information {
  position: relative;
  height: 563rpx;
  width: 100%;
}

.number {
  color: white;
  font-size: 62rpx;
  margin-left: 10rpx;
}

.text {
  color: #b6b7b7;
  font-size: 30rpx;
}

.backgroundImg {
  width: 100%;
  height: 563rpx;
  border-bottom-left-radius: 110rpx;
  border-bottom-right-radius: 110rpx;
  position: relative;

}

.avatar {
  width: 157rpx;
  height: 157rpx;
  border-radius: 50%;
}

.name {
  margin-top: 10rpx;
  font-size: 35rpx;
}

.nameBotoom {
  font-size: 22rpx;
}

.constellation {
  margin: 0 10rpx;
}

.organization {
  position: absolute;
  left: 50%;
  text-align: center;
  transform: translate(-50%, 0);
  white-space: nowrap;
  padding: 8rpx 30rpx;
  bottom: -23rpx;
  z-index: 999;
  background-color: white;
  border-radius: 999rem;
  font-size: 22rpx;
}

.avatarName {
  text-align: center;
  color: white;
  width: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 270rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 99;
}

.backgroundWarp {
  z-index: 99;
}

.editData {
  position: absolute;
  width: 65rpx;
  height: 65rpx;
  right: 67rpx;
  bottom: 46rpx;
}

.hideBar {
  position: absolute;
  background-image: url('http://cdn.eigene.cn/square/hideBar.png');
  background-size: 100%;
  bottom: 26rpx;
  left: 44rpx;
  width: 100rpx;
  height: 100rpx;
  z-index: 999999;
}
.menu {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 50rpx;
}

.iconImg {
  width: 100rpx;
  height: 100rpx;
}

.iconWrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 27rpx;
}

.song,
.feedback,
.aboutUs {
  position: absolute;
}

.song {
  width: 208rpx;
  height: 208rpx;
  top: 775rpx;
  left: 178rpx;
}

.feedback {
  width: 465rpx;
  height: 465rpx;
  top: 871rpx;
  left: 347rpx;
}

.aboutUs {
  width: 398rpx;
  height: 398rpx;
  top: 989rpx;
  right: 446rpx;
}

.fans {
  background-color: #A87EDD;
  padding: 8rpx 22rpx;
  border-radius: 999rem;
  position: absolute;
  top: 197rpx;
  right: 48rpx;
  color: white;
}

.bar {
  position: relative;
  /* height: 85rpx; */
  display: flex;
  box-sizing: border-box;
  /* align-items: center; */
  width: 100%;
  padding: 0 30rpx;
  margin-top: 36rpx;
}

.active {
  border-bottom: 6rpx solid #aa7edf;
  font-weight: bold;
}

.issue {
  margin-left: 40rpx;
}

.letter {
  position: absolute;
  right: 28rpx;
  color: white;
  top: -25rpx;
  font-size: 26rpx;
  border-radius: 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  box-shadow: 0rpx 0rpx 6rpx 6rpx rgba(0, 0, 0, 0.1);
  background-color: #aa7edf;
  width: 120rpx;
  text-align: center;
}

.portion {
  padding: 0px 6rpx 4rpx;
  color: white;
}

.square {
  width: 15rpx;
  height: 15rpx;
  margin-left: 40rpx;
  background-color: #aa7edf;
}

.btn {
  /* transition: all 0.3s; */
  margin-left: 17rpx;
  box-sizing: border-box;
  color: white;
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.list {
  box-sizing: border-box;
  /* padding-top: 60rpx; */
}