/* pages/my/my.wxss */

.my {
  min-height: 100%;
  width: 100%;
}

.information {
  position: relative;
  height: 563rpx;
  width: 100%;
}

.number {
  font-size: 26rpx;
  display: block;
  background: #cc1a00;
  border-radius: 50%;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  color: white;
  text-align: center;
  box-sizing: border-box;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}

.text {
  color: #b6b7b7;
  font-size: 30rpx;
}

.backgroundImg {
  width: 100%;
  height: 563rpx;
  border-bottom-left-radius: 110rpx;
  border-bottom-right-radius: 110rpx;
  position: relative;
}

.shadow {
  position: absolute;
  left: 0px;
  bottom: 0px;
  width: 100%;
  height: 50%;
  background: linear-gradient(to top, rgba(0, 0, 0, 70%) 0%, rgba(0, 0, 0, 0) 100%);
}

.avatar {
  width: 158rpx;
  height: 158rpx;
  border-radius: 50%;
}

.name {
  font-size: 36rpx;
  font-family: 'SH-bold';
  line-height: 50rpx;
}

.nameBotoom {
  font-size: 22rpx;
  /* margin-top: 8rpx; */
}

.nameBotoom>text {
  margin: 0 5rpx;
}

/* .constellation {
  margin: 0 10rpx;
} */

.organization {
  position: absolute;
  left: 50%;
  text-align: center;
  transform: translate(-50%, 0);
  white-space: nowrap;
  padding: 8rpx 30rpx;
  bottom: -23rpx;
  z-index: 999;
  background-color: white;
  border-radius: 999rem;
  font-size: 22rpx;
  line-height: 24rpx;
}

.avatarName {
  text-align: center;
  color: white;
  z-index: 99;
  /* width: 220rpx; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 251rpx;
  transform: translateX(-50%);
  left: 50%;
}

.backgroundWarp {
  z-index: 99;
}

.editData {
  position: absolute;
  width: 54rpx;
  height: 54rpx;
  right: 67rpx;
  bottom: 45rpx;
  z-index: 10;
}

.hideBar {
  position: absolute;
  bottom: 25rpx;
  left: 45rpx;
  width: 95rpx;
  height: 95rpx;
  z-index: 10;
  overflow: visible;
  background-repeat: no-repeat;
}

.hideHideBar {
  height: 0rpx;
  opacity: 0;
  visibility: hidden;
}

.showHideBar {
  height: 600rpx;
  opacity: 1;
  visibility: 1;
}

.hideBarBg {
  top: 516rpx;
  width: 191rpx;
  position: absolute;
  background-repeat: no-repeat;
  color: white;
  font-size: 26rpx;
  box-sizing: border-box;
  /* padding: 56rpx 0rpx 30rpx 0rpx; */
  display: flex;
  flex-direction: column;
  z-index: 10;
  align-items: center;
  /* justify-content: space-between; */
  transition: all .3s;
}

.aboutWrap {
  /* margin-top: 26rpx; */
}




.feedback,
.about {
  position: relative;
  width: 112rpx;
  height: 112rpx;
}

.invitation {
  width: 104rpx;
  height: 104rpx;
}

.menu {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 50rpx;
}

.iconImg {
  width: 100rpx;
  height: 100rpx;
  position: relative;
}

.iconWrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 27rpx;
  text-align: center;
}

.feedAboutWrap {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  transition: all .3s;
  top: 40rpx;
}



.fans {
  background-color: #A87EDD;
  padding: 0rpx 26rpx;
  height: 54rpx;
  line-height: 54rpx;
  border-radius: 999rem;
  position: absolute;
  top: 13.49vh;
  right: 48rpx;
  color: white;
  font-size: 28rpx;
}

.list {
  box-sizing: border-box;
  padding-top: 20rpx;
}

.barWrap {
  padding-top: 32rpx;
  /* padding: 32rpx 0rpx 0rpx 32rpx; */
  box-sizing: border-box;
  width: 100%;
}

.feedWrap,
.aboutWrap {
  opacity: 1;
  visibility: visible;
}

.feedWrap {
  transform: translateY(16rpx);
}

.aboutWrap {
  transform: translateY(194rpx);
}

.codeWrap {
  transform: translateY(370rpx);
}

.groupName {
  font-family: 'SH-bold';
}

.miniLogo-musicmonster {
  left: 0;
  top: 32%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
}

.miniLogo {
  width: 140rpx;
  height: 140rpx;
}

.musicmonster {
  width: 350rpx;
  height: 30rpx;
  margin-top: 60rpx;
}

.btn {
  text-align: center;
  line-height: 64rpx !important;
  width: 400rpx !important;
  color: white;
  height: 64rpx !important;
  border-radius: 999rem;
  font-size: 28rpx !important;
  background: #B37AE5;
  box-shadow: 0rpx 0rpx 10rpx 4rpx rgba(0, 0, 0, .1);
  letter-spacing: 8rpx;
  text-indent: 8rpx;
  margin-top: 30rpx !important;
}

.loginText {
  color: white;
  margin-top: 20rpx;
}



.shade {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  /* background: rgba(0, 0, 0, 0.3); */
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: 0.4s all;
}

.shadeShow {
  opacity: 1;
  visibility: visible;
}

.dialog,
.applyDialog {
  width: 549rpx;
  height: 481rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background: linear-gradient(to bottom, rgba(226, 145, 227, 0.8), rgba(0, 69, 207, 0.8));
  border-radius: 40rpx;
  box-sizing: border-box;
  color: white;
  font-size: 38rpx;
  display: flex;
}

.dialog {
  font-family: 'SH-Normal';
  padding: 100rpx 38rpx 30rpx;
  justify-content: space-between;
  flex-flow: column;
  text-align: center;
}

.groupApply {
  font-family: 'SH-Normal';
}

.applyDialog {
  padding: 56rpx 52rpx 30rpx;
  flex-direction: column;
  justify-content: space-between;
}

.applyContent {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx 15rpx;
  /* margin-top: 35rpx; */
  border-radius: 20rpx;
  box-sizing: border-box;
  height: 220rpx;
  font-size: 26rpx;
  color: white;
}

.choose {
  display: flex;
  justify-content: space-between;
  align-content: center;
  box-sizing: border-box;
  padding: 0 62rpx;

}

.choose>image:first-child {
  width: 55rpx;
  height: 55rpx;
}

.choose>image:last-child {
  width: 72rpx;
  height: 56rpx;
}

.applyPlaceholder {
  font-size: 26rpx;
  color: white;
}

.showBarWrap {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  opacity: 1;
  visibility: visible;
  transition: 0.4s all;
}

.checkbox-group {
  color: white;
  font-size: 26rpx;
  margin-top: 60rpx;
  display: flex;
  /* width: 00rpx; */
  align-items: flex-start;
}

.checkbox-group text {
  vertical-align: middle;
  word-break: break-all;
}

.checkbox-group checkbox {
  transform: scale(0.8, 0.8);
  margin-right: 5rpx;
  vertical-align: middle;
}

.stress {
  border-bottom: 1rpx solid #8798CD;
  padding-bottom: 5rpx;
  color: #C4C4C4;
}





.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 99999;
  opacity: 0;
  visibility: hidden;
  transition: 0.4s all;
  background: rgba(0, 0, 0, 0.3);
}

.popup {
  background: white;
  width: 650rpx;
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  overflow: hidden;
}

.shadeShow {
  opacity: 1;
  visibility: visible;
}

.popupTextarea {
  padding: 0rpx 10rpx;
  height: 66rpx;
  /* background-color: #ECE4FC; */
  border: 1rpx solid #d6d6d6;
  width: 100%;
  box-sizing: border-box;
  margin-top: 32rpx;
}

.complete {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #5CB372;
  font-size: 34rpx;
  font-weight: bold;
  border-top: 1rpx solid #E9E9E9;
}

.hoverComplete {
  background-color: #E4E4E4;
}


.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 40rpx 0rpx;
}

.popup-content {
  box-sizing: border-box;
  word-wrap: break-word;
  padding: 0rpx 40rpx 60rpx;
}

.name-nameBotoom {
  white-space: nowrap;
  word-break: keep-all;
  margin-top: 16rpx;
  /* background-color: rgba(0, 0, 0, 0.3); */
  padding: 2rpx 40rpx;
  border-radius: 10rpx;
}

.contact {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: transparent;
}