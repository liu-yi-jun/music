.miniLogo {
  width: 100rpx;
  height: 100rpx;
}

.musicmonster {
  width: 255rpx;
  height: 22rpx;
}


.shade {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  /* background: rgba(0, 0, 0, 0.3); */
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: 0.4s all;
}

.shadeShow {
  opacity: 1;
  visibility: visible;
}

.dialog {
  width: 480rpx;
  height: 390rpx;
  box-sizing: border-box;
  padding: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 40%;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 40rpx;
  background: linear-gradient(to bottom, rgba(226, 145, 227, 0.8), rgba(0, 69, 207, 0.8));
  justify-content: space-between;
}
.buttonWrap{
  width: 100%;
  display: flex;  
  justify-content: space-between;
}
.btn {
  width: 164rpx!important;
  height: 64rpx!important;
  border-radius: 999rem;
  font-size: 28rpx!important;
  line-height: normal!important;
  display: flex;
  justify-content: center;
  align-items: center;

}
.cancel {
  background: #D9DADA!important;
  color: #727171!important;
}
.confirm {
  background: #74E874!important;
  color: #727171!important;
}
.miniLogo-musicmonster {
  display: flex;
