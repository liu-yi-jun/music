.pageBackground {
  position: relative;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
}

.logo {
  position: absolute;
  width: 436rpx;
  height: 290rpx;
  left: 183rpx;
  top: 220rpx;
}

.searchWrap {
  position: absolute;
  width: 100%;
  top: 54%;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.searchBtn {
  width: 38rpx;
  height: 40rpx;
  position: absolute;
  left: 14rpx;
  top: 0rpx;
  bottom: 0rpx;
  margin: auto;
}

.input {
  height: 100%;
  width: 72%;
  margin: 0 auto;
}

.unfoldBtn {
  width: 55rpx;
  height: 55rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  bottom: 0rpx;
  margin: auto;
}

.searchText {
  font-size: 40rpx;
}
.scroll {
  height: 270rpx;
}
.listWrap {
  width: 400rpx;
  background: rgba(255, 255, 255, 0.5);
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  position: absolute;
  top: 60rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  overflow: hidden;
  padding: 12rpx;
  transition: 0.4s all;
  opacity: 0;
  visibility: hidden;
  z-index: 10;
}

.listShow {
  visibility: visible;
  height: auto;
  opacity: 1;
}

.listItme {
  font-size: 30rpx;
  color: black;
  padding: 8rpx 0!important;
  box-sizing: border-box;
}

