/* pages/init/groupSettlement/groupSettlement.wxss */

.title {
  font-size: 35rpx;
  color: white;
  box-sizing: border-box;
  padding: 40rpx;
}

.imgWarp {
  position: relative;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img {
  width: 280rpx;
  height: 280rpx;
}

.input {
  margin: auto;
  width: 260rpx;
  color: white;
  padding-bottom: 8rpx;
  border-bottom: 1rpx #fff solid;
}

.placeholder {
  color: white;
}

.textareaWarp {
  position: relative;
  height: 460rpx;
}

.textarea {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 600rpx;
  height: 360rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  padding: 15rpx 15rpx;
  color: white;
  background-color: rgba(255, 255, 255, 0.2);
}

.typeWrap {
  position: relative;
  height: 400rpx;
}

.type {
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 500rpx;
}

.typeTile {
  color: white;
  margin-top: 40rpx;
  display: block;
}

/* on */

.wx-switch-input {
  border: 1rpx solid #B37AE5 !important;
  width: 90rpx !important;
  height: 50rpx !important;
  background: #B37AE5 !important;
}

/* off */

.wx-switch-input::before {
  width: 90rpx !important;
  height: 50rpx !important;
}

/* åœ† */

.wx-switch-input::after {
  width: 50rpx !important;
  height: 50rpx !important;
}

.switchWarp {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  color: white;
  font-size: 24rpx;
}

.create {
  text-align: center;
  line-height: 60rpx !important;
  width: 170rpx !important;
  color: white;
  height: 60rpx !important;
  font-size: medium !important;
  border-radius: 999rem;
  font-size: 32rpx !important;
  background: #B37AE5;
  box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(0, 0, 255, .1)
}

.createWarp {
  margin-top: 80rpx;
  display: flex;
  justify-content: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

