/* pages/square/deal/ticketIssue/ticketIssue.wxss */

.footer {
  transition: all 0.4s;
  background: linear-gradient(to bottom, rgba(226, 145, 227, 0.5), rgba(0, 69, 207, 0.5));
  position: fixed;
  width: 100%;
  height: 135rpx;
  bottom: 0;
  z-index: 999;
  padding-bottom: env(safe-area-inset-bottom);
}

.footerInner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 50rpx;
  height: 100%;
  box-sizing: border-box;
  width: 100%;
}

.footer image {
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
}

.wrap {
  box-sizing: border-box;
  display: block;
  padding: 0 15rpx 200rpx 5rpx;
}

.importWrap {
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid white;
  color: white;
  font-size: 26rpx;
}

.placeholder {
  color: white;
}

textarea {
  width: 100%;
  height: 400rpx;
}

.min {
  padding: 25rpx 40rpx !important;
}
.first {
  padding: 15rpx 40rpx 35rpx !important;
}

.location {
  /* margin-top: 80rpx; */
  color: #b7b8b8;
  /* margin-left: 60rpx; */
  font-size: 30rpx;
}


.locationWrap {
  margin-top: 30rpx;
  color: #B7B8B8;
  margin-left: 30rpx;
  font-size: 30rpx;
}

.location {
  display: inline-block;
}

.picker {
  color: white;
  margin-left: 34rpx;
}

.locationLogo {
  width: 26rpx;
  height: 36rpx;
  position: relative;
  top: 4rpx;
}

.locationText {
  margin-left: 8rpx;
}


.imgWrap {
  display: flex;
  justify-content: center;
  position: relative;
  margin-top: 40rpx;
}

.wrapVideo {
  height: 400rpx;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-top: 50rpx;
}

video {
  width: 100%;
  height: 100%;
}

.imgArea {
  width: 650rpx;
  display: flex;
  flex-wrap: wrap;

}

.imgArea image {
  margin: 8rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}

.imgWrap::after {
  content: "";
  display: block;
  width: 600rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  height: 1rpx;
  background-color: #b7b8b8;
}

.moneyWrap {
  padding: 40rpx 30rpx 0rpx;
  font-size: 35rpx;
  color: white;
  /* color: #ce4646; */
  text-align: end;
}