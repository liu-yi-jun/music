.title-top {
  color: #fff;
  font-size: 35rpx;
}

.title-bottom {
  color: #cacbcb;
  font-size: 21rpx;
}

.head {
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.logo {
  width: 47rpx;
  height: 47rpx;
  border-radius: 50%;
  flex-shrink: 0;
}





.searchLog {
  width: 30rpx;
  height: 32rpx;
  position: absolute;
  left: 18rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}

.search {
  width: 340rpx;
  height: 60rpx;
  box-sizing: border-box;
  color: black!important;
  padding: 0 30rpx 0 60rpx;
  background: #e2e2e2;
  border-radius: 999rem;
}

.searchWrap {
  position: relative;
}

.myStore {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 70rpx;
  height: 70rpx;
}
