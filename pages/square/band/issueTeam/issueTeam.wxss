/* pages/square/band/issueTeam/issueTeam.wxss */

.head {
  display: flex;
  border-bottom: 6rpx solid #b7b8b8;
  height: 150rpx;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding-left: 56rpx;
}

.head input {
  color: white;
}

.avatar {
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
}

.placeholder {
  color: white;
}

.avatarWrap {
  height: 80%;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border-left: 1rpx solid #cacbcb;
}

.avatarWrap text {
  display: block;
  height: 65rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.existLogo image,
.recruitLogo image {
  width: 85rpx;
  height: 85rpx;
}


.existLogo,
.recruitLogo {
  display: flex;
  margin-top: 20rpx;
  height: 122rpx;
  color: white;
}



.existLogo text,
.recruitLogo text {
  font-size: 28rpx;
}

.exist {
  background: white;
  color: #727171;
}

.recruit {
  background: #a97ede;
  color: white;
}

.recruit,
.exist {
  display: inline-block;
  border-radius: 15rpx;
  font-size: 28rpx;
  margin-left: 40rpx;
  padding: 8rpx 12rpx;
}

.recruitWrap {
  margin-top: 40rpx;
  position: relative;
}

.exist-recruit {
  width: 98%;
  margin: auto;
  box-sizing: border-box;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #b7b8b8;
}

.textareaWarp {
  box-sizing: border-box;
  padding: 40rpx 0;
  width: 98%;
  margin: auto;
  border-bottom: 1rpx solid #b7b8b8;
}

.textarea {
  font-size: 30rpx;
  margin: auto;
  width: 680rpx;
  height: 360rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  padding: 25rpx;
  color: white;
  background-color: rgba(255, 255, 255, 0.2);
}

.location {
  color: #b7b8b8;
  /* margin-left: 50rpx; */
  font-size: 30rpx;
  margin-top: 20rpx;
}

.issueWrap {
  box-sizing: border-box;
  padding: 100rpx 0;
}

.issue {
  width: 120rpx !important;
  height: 50rpx !important;
  background: white !important;
  color: #9679cd !important;
  border-radius: 999rem !important;
  text-align: center !important;
  line-height: 50rpx !important;
  margin: auto !important;
  box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(0, 0, 255, 0.1) !important;
}

.existWrap {
  /* position: relative; */
}

.existPopup,
.recruitPopup {
  width: 623rpx;
  height: 602rpx;
  background: white;
  border-radius: 20rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 10;
  transform: translate(-50%, -50%);
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 20rpx;
  align-items: flex-start;
  justify-items: flex-start;
}

.part {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 130rpx;
  width: 20%;
}

.instrumentsWrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.instruments {
  width: 66rpx;
  height: 66rpx;
}

.instrumentsName {
  font-size: 20rpx;
}

.select {
  width: 17rpx;
  height: 17rpx;
}

.explain {
  width: 100%;
  color: #B7B8B8;
  font-size: 22rpx;
  text-align: center;
}

swiper-item {
  display: flex;
  justify-content: space-around;
}

swiper-item>view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.locationWrap {
  color: #B7B8B8;
  margin-left: 30rpx;
  font-size: 30rpx;
}

.location {
  display: inline-block;
}

.picker {
  color: white;
  margin-left: 34rpx;
}

.locationLogo {
  width: 26rpx;
  height: 36rpx;
  position: relative;
  top: 4rpx;
}

.locationText {
  margin-left: 8rpx;
}

.addRecruit,
.addExist {
  width: 152rpx;
  height: 47rpx;
}

.addRecruitWrap,
.addExistWrap {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}
.complete {
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  color:  white;
  text-align: center;
  background:#B37AE5;
  border-radius: 999rem;
  box-shadow: 0rpx 0rpx 14rpx 2rpx rgba(0, 0, 0, .2);
  font-size: 30rpx;
}
.completeWrap {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 12rpx;
}