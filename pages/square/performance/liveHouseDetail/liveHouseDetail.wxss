/* pages/square/performance/liveHouseDetail/liveHouseDetail.wxss */


.icon-time {
  box-sizing: border-box;
  padding: 20rpx 20rpx 50rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #CACBCB;
}

.iconWrap {
  display: flex;
}


.icon {
  display: flex;
  align-items: center;
}

.icon image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.icon text {
  color: white;
  font-size: 26rpx;
  margin-left: 10rpx;
}

.content {
  font-size: 28rpx;
  color: white;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  word-break: break-all;
  /* width: 98%;
  margin: auto; */
  border-bottom: 1rpx solid #cacbcb;
}

.wx-swiper-dots {
  position: relative;
  left: unset !important;
  right: 0rpx;
}

.footerComment {
  background: linear-gradient(to bottom, rgba(226, 145, 227, 0.5), rgba(0, 69, 207, 0.5));
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

