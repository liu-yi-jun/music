/* pages/square/performance/allianceDetail/allianceDetail.wxss */
.head {
  padding: 30rpx 30rpx 0 40rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.head .title {
  font-size: 30rpx;
  color: white;
  font-family: 'SH-Bold';
}

.head .time {
  opacity: 0.5;
  color: white;
  font-size: 21rpx;
}

.Wrap {
  box-sizing: border-box;
  padding: 40rpx 40rpx 50rpx 40rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #B7B8B8;
}

.info {
  display: flex;
  align-items: center;
  flex-direction: column;
  color: white;
  font-size: 28rpx;
  line-height: 52rpx;
}

.imgWrap {
  margin: 40rpx 0rpx;
}

.img {
  width: 100%;
}

.introduceWrap {
  color: white;
  font-size: 28rpx;
}

.footerComment {
  background: linear-gradient(to bottom, rgba(226, 145, 227, 0.5), rgba(0, 69, 207, 0.5));
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.commentWrap {
  display: flex;
  box-sizing: border-box;
  padding: 40rpx 32rpx 10rpx;
}

.commentWrap image {
  width: 34rpx;
  height: 34rpx;
}

.commentWrap text {
  color: white;
  font-size: 27rpx;
  margin-left: 9rpx;
}



.fontWrap {
  display: flex;
  justify-content: flex-end;
  box-sizing: border-box;
  padding: 10rpx 0;
}

.fontWrap .img {
  width: 40rpx;
  height: 40rpx;
}

.fontWrap .number {
  color: white;
  font-size: 26rpx;
  margin-left: 10rpx;
}

.fontWrap .img-number {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}


.delete {
  width: 70rpx;
  height: 70rpx;
  font-size: 36rpx;
  color: white;
  text-align: center;
  line-height: 70rpx;
}

.wrapVideo {
  height: 400rpx;
  width: 100%;
  padding: 0 8rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
}
.recordWrap{
  padding: 0 8rpx;
  margin-top: 40rpx;
  box-sizing: border-box;
}
.recordImg {
  width: 54rpx;
  height: 30rpx;
}
.recordTime {
  font-size: 25rpx;
}
.playRecord {
  width: 394rpx;
  height: 75rpx;
  position: relative;
  border-radius: 999rem;
  background-color: #ece4fc;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
video {
  width: 100%;
  height: 100%;
}
