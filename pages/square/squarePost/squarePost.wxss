.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 99999;
  opacity: 0;
  visibility: hidden;
  transition: 0.4s all;
  background: rgba(0, 0, 0, 0.3);
}

.popup {
  background: linear-gradient(to bottom, rgba(226, 145, 227, 0.6), rgba(0, 69, 207, 0.6));
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.shadeShow {
  opacity: 1;
  visibility: visible;
}

.popupTextarea {
  padding: 10rpx;
  background-color: #ECE4FC;
  border-radius: 10rpx;
  max-height: 100rpx;

}

.complete {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #ECE4FC;
  color: #47C01C;
  border-radius: 10rpx;
  margin-top: 20rpx;

}

.delete {
  position: absolute;
  right: 8rpx;
  top: 8rpx;
  font-size: 35rpx;
  z-index: 10;
  color: rgba(191, 191, 191, 0.8);
}

.signInBox {
  width: 621rpx;
  height: 768rpx;
  transform: translate(-50%, -50%);
  border-radius: 40rpx;
  top: 50%;
  left: 50%;
  position: absolute;
  background: linear-gradient(to bottom, #AE7AE0, #8A73DF, #1859D9);
  color: white;
  font-size: 26rpx;
  padding: 60rpx 73rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}

.title {
  font-size: 36rpx;
  text-align: center;
  font-family: 'SH-Bold';
}

.item {
  margin-top: 34rpx;
  text-align: justify;
}

.create {
  text-align: center;
  line-height: 56rpx !important;
  width: 150rpx !important;
  color: white;
  height: 56rpx !important;
  border-radius: 999rem;
  font-size: 26rpx !important;
  background: #B37AE5;
  box-shadow: 0rpx 0rpx 10rpx 4rpx rgba(0, 0, 0, .1);
  letter-spacing: 3rpx;
  text-indent: 3rpx;
}

.createWarp {
  display: flex;
  justify-content: center;
}

.emphasize {
  font-family: 'SH-Bold';
  opacity: 1;
}

.shallow {
  opacity: 0.8;
}

.underline {
  border-bottom: 1rpx solid #8798CD;
  padding-bottom: 5rpx;
  color: #C4C4C4;
}

.localDelete {
  /* color: rgba(191, 191, 191, 0.8); */
  margin-left: 20rpx;
  display: inline-block;
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  cursor: pointer;
}