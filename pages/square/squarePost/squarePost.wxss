/* pages/square/squarePost/squarePost.wxss */

.placeholder {
  color: #b7b8b8;
  font-size: 28rpx;
}

textarea {
  padding-left: 8rpx ;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  width: 100%;
  min-height: 100rpx;
  /* height: 764rpx; */
  color: white;
}

.imgWrap {
  display: flex;
  justify-content: center;
  position: relative;
  /* padding: 0 0 30rpx; */
}
.wrapVideo {
  height: 400rpx;
  width: 100%;
  padding: 0 8rpx;
  box-sizing: border-box;
}
.recordWrap{
  padding: 0 8rpx;
  box-sizing: border-box;
}
.recordImg {
  width: 54rpx;
  height: 30rpx;
}
.recordTime {
  font-size: 25rpx;
}
.playRecord {
  width: 394rpx;
  height: 75rpx;
  position: relative;
  border-radius: 999rem;
  background-color: #ece4fc;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
video {
  width: 100%;
  height: 100%;
}

.imgArea {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.imgArea image {
  margin: 8rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}

.imgWrap::after {
  content: "";
  display: block;
  width: 600rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  height: 1rpx;
  background-color: #b7b8b8;
}

.delete {
  position: absolute;
  right: 8rpx;
  top: 8rpx;
  font-size: 35rpx;
  z-index: 10;
  color: rgba(191, 191, 191, 0.8);
}

.record {
  position: fixed;
  z-index: 9999;
}
.footer {
  transition: all 0.4s;
  background: linear-gradient(to bottom, rgba(226, 145, 227, 0.5), rgba(0, 69, 207, 0.5));
  position: fixed;
  width: 100%;
 height: 135rpx;
  bottom: 0;
  z-index: 999;
  padding-bottom: env(safe-area-inset-bottom);
}

.footerInner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 50rpx;
  height: 100%;
  box-sizing: border-box;
  width: 100%;
}

.footer image {
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
}

.locationWrap {
  margin-top: 30rpx;
  color: #B7B8B8;
  margin-left: 8rpx;
  font-size: 30rpx;
  position: fixed;
  top: 79%;
  left: 28rpx;
}
.location {
  display: inline-block;
}
.picker {
  color: white;
  margin-left: 34rpx;
}
.locationLogo {
  width: 26rpx;
  height: 36rpx;
  position: relative;
  top: 4rpx;
}
.locationText {
  margin-left: 8rpx;
}

.wrap {
  display: block;
  box-sizing: border-box;
  padding: 30rpx 50rpx 300rpx;
}
.picker-image{
  position: relative;
}
.topicPicker {
  width: 78rpx;
  height: 78rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.pickerView {
  width: 78rpx;
  height: 78rpx;
}


.topic {
  position: relative;
  background-image: url('http://cdn.eigene.cn/square/topic1.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  box-sizing: border-box;
  padding: 15rpx 25rpx;
  font-size: 23rpx;
  display: inline-block;
}
.topicWrap {
  box-sizing: border-box;
  padding: 0 8rpx;
  margin-top: 20rpx;
}
