.okLogo {
  width: 272rpx;
  height: 272rpx;
  border-radius: 50%;
  position: absolute;
  right: -26rpx;
  bottom: 0rpx;
}

.dataImg {
  width: 500rpx;
  height: 359rpx;
  margin: 20rpx auto 40rpx;
  border-radius: 10rpx;
}

.video {
  width: 500rpx;
  height: 359rpx;
  margin: 20rpx auto 100rpx;
  border-radius: 10rpx;
}
.okInner {
  width: 70%;
  height: 70%;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  position: absolute;
}


