.issuePuchCard {
  width:100%;
  height:100%;
}
.card {
  width: 630rpx;
  height: 1070rpx;
  position: absolute;
  left: 0;
  right: 0;
  background: #a97ede;
  border-radius: 60rpx;
  top: 13.75%;
  margin:auto;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.part {
  color: white;
  display: flex;
  height: 50%;
  width: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.topUpload {
  margin-bottom: 160rpx;
}

.bottomUpload {
  margin-bottom: 350rpx;
}

.part view {
  background: white;
  color: #a97ede;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  margin-top: 15rpx;
}

