/* pages/home/dynamicDetail/dynamicDetail.wxss */


.head {
  display: flex;
  align-items: center;
  height: 120rpx;
  margin-top: 10rpx;
  justify-content: space-between;
}

.avatar-userName {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 32rpx;
}

.userName {
  margin-left: 20rpx;
  font-size: 28rpx;
  font-family: 'SH-Bold';
  color: white;
}

swiper {
  width: 100%;
  height: 452rpx;
}

.video {
  width: 100%;
  height: 452rpx;
}

swiper-item,
.dynamicImg {
  width: 100%;
  height: 100%;
}

.icon-time {
  box-sizing: border-box;
  padding: 15rpx 26rpx 0 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.location {
  color:  white;
  font-size: 24rpx;
}

.iconWrap {
  font-size: 22rpx;
  display: flex;
}

.time {
  font-size: 24rpx;
  color: #b7b8b8;
}

.icon {
  display: flex;
  align-items: center;
}

.icon image {
  width: 46rpx;
  height: 46rpx;
  margin-left: 20rpx;
}

.icon text {
  color: white;
  font-size: 26rpx;
  margin-left: 10rpx;
}

.content {
  /* font-size: 28rpx; */
  color: white;
  padding: 10rpx 32rpx 0rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  margin: auto;
  word-break: break-all;
}

.wx-swiper-dots {
  position: relative;
  left: unset !important;
  right: 0rpx;
}

.wx-swiper-dots.wx-swiper-dots-horizontal {
  /* margin-bottom: -5rpx; */
}

.footerComment {
  background: linear-gradient(to bottom, rgba(226, 145, 227, 0.6), rgba(0, 69, 207, 0.6));
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.commentWrap {
  display: flex;
  /* align-items:center; */
  box-sizing: border-box;
  padding: 40rpx 32rpx 10rpx;
}

.commentWrap image {
  width: 34rpx;
  height: 34rpx;
}

.commentWrap text {
  color: white;
  font-size: 27rpx;
  margin-left: 9rpx;
}

.recordWrap {
  width: 350rpx;
  height: 350rpx;
  margin: 20rpx auto;
}

.delete {
  width: 70rpx;
  height: 70rpx;
  font-size: 36rpx;
  color: white;
  text-align: center;
  line-height: 70rpx;
  margin-right: 20rpx;
}


.recordImg {
  width: 54rpx;
  height: 30rpx;
}

.recordTime {
  font-size: 25rpx;
}

.record {
  width: 394rpx;
  height: 75rpx;
  position: relative;
  border-radius: 999rem;
  background-color: #ece4fc;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recordSecond {
  box-sizing: border-box;
  margin-top: 15rpx;
  padding: 32rpx;
}
