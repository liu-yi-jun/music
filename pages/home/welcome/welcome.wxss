/* pages/home/welcome/welcome.wxss */
.logoWrap {
  position: relative;
  line-height: 0rpx;
}

.logo-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 4vh 0 0rpx;
}

.logo-group text {
  margin-top: 38rpx;
  color: white;
  font-size: 32rpx;
  font-family: 'SH-Heavy';
}

.logo {
  width: 169rpx;
  height: 169rpx;
  border-radius: 50%;
}
.introduceWarp {
  padding: 5.49vh 0 5.99vh;
}


.introduce {
  text-align: center;
  width: 50%;
  margin: auto;
  color: white;
  font-size: 26rpx;
}

.into {
  transform:translateX(-50%);
  left: 50%;
  top: 80%;
  position: absolute;
  width: 180rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: white;
  text-align: center;
  margin: auto;
  border-radius: 999rem;
  background: #A77FDC;
  box-shadow: 0px 0px 9rpx rgba(0, 0, 0, 0.2);
  /* box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(0, 0, 255, 0.1); */
  font-size: 26rpx;
  margin-bottom: 40rpx;
  letter-spacing: 8rpx;
  text-indent: 8rpx;
}


.shade {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: 0.4s all;
}

.shadeShow {
  opacity: 1;
  visibility: visible;
}

.dialog,
.applyDialog {
  width: 549rpx;
  height: 481rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background: linear-gradient(to bottom, rgba(226, 145, 227, 0.8), rgba(0, 69, 207, 0.8));
  border-radius: 40rpx;
  box-sizing: border-box;
  color: white;
  font-size: 38rpx;
  display: flex;
}

.dialog {
  font-family: 'SH-Normal';
  padding: 100rpx 38rpx 30rpx;
  justify-content: space-between;
  flex-flow: column;
  text-align: center;
}
.groupApply {
  font-family: 'SH-Normal';
}
.applyDialog {
  padding: 56rpx 52rpx 30rpx;
  flex-direction: column;
  justify-content: space-between;
}

.applyContent {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx 15rpx;
  /* margin-top: 35rpx; */
  border-radius: 20rpx;
  box-sizing: border-box;
  height: 220rpx;
  font-size: 26rpx;
  color: white;
}

.choose {
  display: flex;
  justify-content: space-between;
  align-content: center;
  box-sizing: border-box;
  padding: 0 62rpx;

}

.choose>image:first-child {
  width: 55rpx;
  height: 55rpx;
}

.choose>image:last-child {
  width: 72rpx;
  height: 56rpx;
}

.applyPlaceholder {
  font-size: 26rpx;
  color: white;
}