/* pages/home/welcome/welcome.wxss */
.logoWrap {
  position: relative;
  line-height: 0rpx;
}

.logo-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 4vh 0 0rpx;
}

.logo-group text {
  margin-top: 38rpx;
  color: white;
  font-size: 32rpx;
  font-family: 'SH-Heavy';
}

.logo {
  width: 169rpx;
  height: 169rpx;
  border-radius: 50%;
}
.introduceWarp {
  padding: 5.49vh 0 5.99vh;
}


.introduce {
  text-align: center;
  width: 50%;
  margin: auto;
  color: white;
  font-size: 26rpx;
}

.into {
  transform:translateX(-50%);
  left: 50%;
  top: 80%;
  position: absolute;
  width: 180rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: white;
  text-align: center;
  margin: auto;
  border-radius: 999rem;
  background: #A77FDC;
  box-shadow: 0px 0px 9rpx rgba(0, 0, 0, 0.2);
  /* box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(0, 0, 255, 0.1); */
  font-size: 26rpx;
  margin-bottom: 40rpx;
  letter-spacing: 8rpx;
  text-indent: 8rpx;
}
