.placeholder {
  color: rgba(255, 255, 255, 0.8);
  font-size: 30rpx;
}

.textareaWarp {
  position: relative;
  height: 34.48vh;
  font-size: 30rpx;
}

.textarea {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 600rpx;
  height: 360rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  font-size: 30rpx;
  padding: 30rpx;
  color: white;
  background-color: rgba(255, 255, 255, 0.2);
}

.imgWrap {
  display: flex;
  justify-content: center;
  position: relative;
  padding: 0rpx 0 5.99vh;
}

.imgArea {
  width: 600rpx;
  display: flex;
  flex-wrap: wrap;
}

.imgArea image {
  margin: 10rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}

.imgWrap::after {
  content: "";
  display: block;
  width: 600rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  height: 3rpx;
  background-color: #b7b8b8;
}


.locationWrap {
  color: #b7b8b8;
  margin: 2.62vh auto 0;
  width: 600rpx;
  font-size: 30rpx;
}


.location {
  display: inline-block;
}

.picker {
  color: white;
  margin-left: 34rpx;
}

.locationLogo {
  width: 26rpx;
  height: 36rpx;
  position: relative;
  top: 4rpx;
}

.locationText {
  margin-left: 8rpx;
  font-size: 28rpx;
}


.issueWrap {
  box-sizing: border-box;
  padding: 4.49vh 0 100rpx;
}

.issue {
  width: 162rpx !important;
  height: 64rpx !important;
  background: #A77FDC !important;
  border: 1px solid #A77FDC !important;
  opacity: 1 !important;
  border-radius: 999rem !important;
  text-align: center !important;
  line-height: 64rpx !important;
  color: white !important;
  margin: auto !important;
  font-size: 30rpx !important;
  box-shadow: 0rpx 0rpx 10rpx 4rpx rgba(0, 0, 0, .1);
  letter-spacing: 8rpx;
  text-indent: 8rpx;
}

.delete {
  position: absolute;
  right: 8rpx;
  top: 0rpx;
  font-size: 35rpx;
  z-index: 10;
  color: rgba(191, 191, 191, 0.8);
}

.localDelete {
  margin-left: 20rpx;
  display: inline-block;
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  cursor: pointer;
}