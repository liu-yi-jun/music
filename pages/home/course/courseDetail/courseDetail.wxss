/* pages/home/course/courseDetail/courseDetail.wxss */

.head {
  box-sizing: border-box;
  padding: 24rpx 10rpx 24rpx 30rpx;
  /* display: flex;
  justify-content: space-between;
  align-items: center; */
}

.title {
  color: white;
  font-family: 'SH-Bold';
  font-size: 34rpx;
}

.viewWrap {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #B7B8B8;
  display: flex;
  align-items: center;
}

.viewImg {
  width: 30rpx;
  margin-right: 10rpx;
  margin-left: 20rpx;
  height: 20rpx;
}

.date {
  /* margin-left: 40rpx; */
}

.time {
  margin-left: 15rpx;
}

.video {
  width: 100%;
  height: 420rpx;
}

.fontWrap {
  display: flex;
  justify-content: flex-end;
  box-sizing: border-box;
  padding: 10rpx 0;
}

.fontWrap .img {
  width: 40rpx;
  height: 40rpx;
}

.fontWrap .number {
  color: white;
  font-size: 26rpx;
  margin-left: 10rpx;
}

.fontWrap .img-number {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.avatarAreaWarp-introduce {
  /* display: flex; */
  border-bottom: 2rpx solid #cacbcb;
}

.introduce {
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0rpx 32rpx 20rpx 32rpx;
  color: white;
  word-break: break-all
}

.avatarAreaWrap {
  display: flex;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
}

.avatarVoiceWrap {
  padding: 32rpx 20rpx 32rpx 32rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;

}

.voiceWrap {
  background-color: #ece4fc;
  border-radius: 999rem;
  margin-top: 30rpx;
  height: 60rpx;
  width: 246rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 15rpx;
}

.voice {
  height: 30rpx;
  width: 50rpx;
}

.voiceWrap text {
  color: black;
  font-size: 20rpx;
}

.name-organization {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 20rpx;
  /* align-items: center; */
}

.name-organization .name {
  font-size: 28rpx;
  font-family: 'SH-Bold';
  color: white;
  padding-left: 9rpx;
}

.organization {
  font-size: 24rpx;
  text-align: center;
  margin-top: 4rpx;
  box-sizing: border-box;
  padding: 0rpx 15rpx;
  border-radius: 999rem;
  background: white;
  line-height: 32rpx;
}

.avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.bar {
  display: flex;
  color: #B7B8B8;
  box-sizing: border-box;
  padding: 35rpx;
}

.commentWrap,
.datumWrap {
  display: flex;
  align-items: center;
}

.datumWrap {
  margin-left: 30rpx;
}

.bar image {
  width: 50rpx;
  height: 50rpx;
}

.active {
  color: white;
}

.bar text {
  margin-left: 5rpx;
  font-size: 28rpx;
}

.footerComment {
  background: linear-gradient(to bottom, rgba(226, 145, 227, 0.5), rgba(0, 69, 207, 0.5));
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.datum {
  width: 35rpx !important;
  height: 37rpx !important;
}

.datumText {
  margin-left: 10rpx !important;
}

.recordImg {
  width: 54rpx;
  height: 30rpx;
}

.delete {
  width: 70rpx;
  font-size: 36rpx;
  flex-shrink: 0;
  height: 70rpx;
  color: white;
  text-align: center;
  flex-shrink: 0;
}

.barWrap {
  padding: 20rpx 0rpx 8rpx 32rpx;
  box-sizing: border-box;
  width: 100%;
}

.title-showMenu {
  display: flex;
  width: 100%;
  /* align-items: center; */
  justify-content: space-between;
}

.follow {
  border-radius: 999rem;
  font-size: 24rpx !important;
  background: #B37AE5;
  line-height: 45rpx !important;
  text-align: center;
  color: white;
  box-shadow: 0rpx 0rpx 10rpx 4rpx rgba(0, 0, 0, .1);
  width: 120rpx !important;
  height: 45rpx !important;
}
.followed {
  background: #B4B4B5;
}

.avatar-organization {
  display: flex;
}