/* pages/home/massManagement/massManagement.wxss */

.head {
  color: white;
  box-sizing: border-box;
  padding: 1.49vh 40rpx 0rpx;
  font-size: 36rpx;
  font-family: 'SH-Bold';
}

.logo-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 2.99vh 0 0rpx;
}

.logo-group text {
  margin-top: 38rpx;
  color: white;
  font-size: 32rpx;
  font-family: 'SH-Heavy';
}

.logo {
  width: 169rpx;
  height: 169rpx;
  border-radius: 50%;
}

.newLogo {
  width: 47rpx;
  height: 47rpx;
  position: absolute;
  right: 0;
  bottom: 9rpx;
}

.logoWrap {
  position: relative;
  line-height: 0rpx;
}

.typeWrap {
  position: relative;
  height: 209rpx;
}

.type {
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 500rpx;
}

.typeTile {
  color: white;
  margin-top: 72rpx;
  font-size: 32rpx;
  display: block;
}

/* on */

.wx-switch-input {
  border: 1rpx solid #b37ae5 !important;
  width: 90rpx !important;
  height: 50rpx !important;
  background: #b37ae5 !important;
}

/* off */

.wx-switch-input::before {
  width: 90rpx !important;
  height: 50rpx !important;
}

/* åœ† */

.wx-switch-input::after {
  width: 50rpx !important;
  height: 50rpx !important;
}

.switchWarp {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  font-size: 28rpx;
}

.placeholder {
  font-size: 27rpx;
  color: rgba(255, 255, 255, 0.8);
}

.textareaWarp {
  position: relative;
  height: 428rpx;
}

.textarea {
  position: absolute;
  font-size: 27rpx;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 534rpx;
  height: 330rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  padding: 25rpx;
  color: white;
  background-color: rgba(255, 255, 255, 0.2);
}

.personnel {
  color: white;
  font-size: 32rpx;
}

.dataWrap {
  margin: 41rpx auto 0rpx;
  width: 534rpx;
  color: white;
}

.data {
  margin-top: 4.49vh;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.data view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.data .number {
  font-size: 67rpx;
}

.data .numberText {
  margin-top: 7rpx;
  font-size: 24rpx;
}

.dissolutionWrap {
  width: 100%;
  box-sizing: border-box;
  padding: 4.94vh 0 7.49vh;
}

.dissolution {
  width: 214rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: white;
  text-align: center;
  margin: auto;
  border-radius: 999rem;
  background: #A77FDC;
  box-shadow: 0px 0px 9rpx rgba(0, 0, 0, 0.2);
  /* box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(0, 0, 255, 0.1); */
  font-size: 26rpx;
  letter-spacing: 8rpx;
  text-indent: 8rpx;
}

.personnelWrap {
  width: 534rpx;
  margin: auto;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-top: -20rpx;
  margin-bottom: -20rpx;
  box-sizing: border-box;
  align-items: center;
}

.jump {
  width: 16rpx;
  height: 25rpx;
}

.introduceWarp {
  padding: 4.49vh 0 5.99vh;
}

.introduce {
  text-align: center;
  width: 50%;
  margin: auto;
  color: white;
  font-size: 26rpx;
}

.save {
  width: 140rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: white;
  text-align: center;
  margin: auto;
  border-radius: 999rem;
  background: #A77FDC;
  box-shadow: 0px 0px 9rpx rgba(0, 0, 0, 0.2);
  /* box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(0, 0, 255, 0.1); */
  font-size: 26rpx;
  margin-bottom: 40rpx;
  letter-spacing: 8rpx;
  text-indent: 8rpx;
}

.groupData {
  font-size: 32rpx;
  line-height: 33rpx;
}


.shade {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: 0.4s all;
}

.shadeShow {
  opacity: 1;
  visibility: visible;
}

.shade>image {
  width: 600rpx;
  height: 600rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

}

.generate {
  margin-top: 20rpx;
}

.canvasLogo {
  /* width: 400rpx;
  height: 400rpx; */
  position: absolute;
  top: -1000px;

  /* position: absolute;
  top: 0rpx;
  left: 0rpx; */
  border: 1rpx solid black;
  width: 750rpx;
  height: 750rpx;

}

.dialog {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  justify-content: space-between;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 40rpx;
  background: linear-gradient(to bottom, #AD7AE0, #8572DE, #0051D8);
  color: white;
  /* width: 520rpx;
  height: 887rpx; */
  width: 600rpx;
  height: 1024rpx;
  padding: 32rpx 36rpx 66rpx;
}

.poster {
  width: 100%;
  /* height: 586rpx; */
  height: 695rpx;
}

.save-poster,
.share-poster {
  width: 327rpx;
  height: 67rpx;
  position: relative;
}

.canvasPoster {
  width: 750rpx;
  height: 985rpx;
  position: fixed;
  transform: translate(-50%, -50%);
  left: 50%;
  top: -100%;
  border: 1rpx solid white;
  z-index: 999999999;
}

.share-poster button {
  position: absolute;
  width: 100% !important;
  height: 100% !important;
  left: 0rpx;
  top: 0rpx;
  border: none !important;
  background-color: transparent !important;
}