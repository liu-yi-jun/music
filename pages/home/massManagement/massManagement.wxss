/* pages/home/massManagement/massManagement.wxss */

.head {
  color: white;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  font-size: 34rpx;
}

.logo-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 40rpx 0;
}

.logo-group text {
  margin-top: 30rpx;
  color: white;
}

.logo {
  width: 167rpx;
  height: 167rpx;
  border-radius: 50%;
}

.newLogo {
  width: 47rpx;
  height: 47rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}

.logoWrap {
  position: relative;
}

.typeWrap {
  position: relative;
  height: 200rpx;
}

.type {
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 500rpx;
}

.typeTile {
  color: white;
  margin-top: 40rpx;
  display: block;
}

/* on */

.wx-switch-input {
  border: 1rpx solid #b37ae5 !important;
  width: 90rpx !important;
  height: 50rpx !important;
  background: #b37ae5 !important;
}

/* off */

.wx-switch-input::before {
  width: 90rpx !important;
  height: 50rpx !important;
}

/* åœ† */

.wx-switch-input::after {
  width: 50rpx !important;
  height: 50rpx !important;
}

.switchWarp {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  color: white;
  font-size: 24rpx;
}

.placeholder {
  color: white;
  font-size: 30rpx;
}

.textareaWarp {
  position: relative;
  height: 450rpx;
}

.textarea {
  position: absolute;
  font-size: 30rpx;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 600rpx;
  height: 360rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  padding: 25rpx;
  color: white;
  background-color: rgba(255, 255, 255, 0.2);
}

.personnel {
  color: white;
}

.dataWrap {
  margin: 20rpx auto;
  width: 575rpx;
  color: white;
}

.data {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 40rpx;
}

.data view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.data .number {
  font-size: 60rpx;
}

.data .numberText {
  margin-top: 10rpx;
  font-size: 22rpx;
}

.dissolutionWrap {
  width: 100%;
  box-sizing: border-box;
  padding: 80rpx 0 100rpx;
}

.dissolution {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: white;
  text-align: center;
  margin: auto;
  border-radius: 999rem;
  background: #b37ae5;
  box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(0, 0, 255, 0.1);
  font-size: 30rpx;
}

.personnelWrap {
  width: 575rpx;
  margin: auto;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
  align-items: center;
}
.jump {
  width: 16rpx;
  height: 25rpx;
}
.introduceWarp {
  padding: 60rpx 0 80rpx;
}
.introduce {
  text-align: center;
  width: 50%;
  margin: auto;
  color: white;
  font-size: 24rpx;
}
.save {
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: white;
  text-align: center;
  margin: auto;
  border-radius: 999rem;
  background: #b37ae5;
  box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(0, 0, 255, 0.1);
  font-size: 30rpx;
  margin-bottom: 40rpx;
}