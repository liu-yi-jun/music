/* pages/home/alliance/alliance.wxss */
.head {
  width: 100%;
  box-sizing: border-box;
  padding: 0 60rpx;
}
.lineWarp {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -100;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.lineWarp > .last {
  border: 0;
}

.lineWarp view {
  display: block;
  height: 23rpx;
  flex: 1;
  border-right: 1rpx #a3a3a4 solid;
  /* background-color: #a3a3a4; */
}

.add {
  position: fixed;
  width: 135rpx;
  height: 135rpx;
  z-index: 10;
  bottom: 23rpx;
  right: 27rpx;
}

.add image {
  width: 100%;
  height: 100%;
}

.contain {
  padding: 40rpx 0 0 0;
}

.list {
  margin-top: 48rpx;
}

.active {
  color: #fff;
  transform: scale(1.3);
}

.bar {
  display: flex;
  justify-content: space-around;
  color: #b7b8b8;
  /* padding: 5rpx 0; */
  font-size: 23rpx;
  position: relative;
}

.bar text {
  transition: all 0.2s;
}

.title {
  display: flex;
  flex-direction: column;
  /* border-left: 1rpx #a3a3a4 solid; */
  padding-left: 14rpx;
  position: relative;
  margin-bottom: 27rpx;
}

.title::before {
  content: "";
  display: block;
  position: absolute;
  height: 52rpx;
  width: 1rpx;
  background-color: #a3a3a4;
  left: 0rpx;
  top: 9rpx;
}

.title-top {
  color: #fff;
  font-size: 30rpx;
}

.title-bottom {
  color: #cacbcb;
  font-size: 19rpx;
}
