  box-sizing: border-box;
  padding-left: 40rpx;
  padding-right: 40rpx;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.setion {
  margin-bottom: 60rpx;
}

.dynamic {
  box-sizing: border-box;
  width: 100%;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
