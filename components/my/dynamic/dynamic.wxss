.content {
  color: white;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 0 20rpx 47rpx;
}

.rightImg {
  margin-left: 10rpx;
}

.imgArae {
  margin-top: 30rpx;
}

.imgArae image {
  width: 259rpx;
  height: 259rpx;
  border-radius: 10rpx;
}

.left {
  height: 77rpx;
  display: flex;
  align-items: center;
}

.right {
  font-size: 20rpx;
  display: block;
  text-align: center;
  padding: 8rpx 15rpx;
  background-color: white;
  border-radius: 999rem;
}

.name {
