/* components/my/information/privateLetter/privateLetter.wxss */

.privateLetter {
  margin-top: 20rpx;
}

.movable-area {
  height: 200rpx;
  width: 100%;
}
.movable-area::after {
  content: "";
  display: block;
  position: absolute;
  width: 80%;
  bottom: 0;
  left:  20%;
  height: 1rpx;
  background: #c9caca 
}

.movable-view {
  /* overflow: hidden; */
  height: 100%;
  width: 148%;
  display: flex;
}

.left {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding-left: 35rpx;
  display: flex;
  align-items: center;
}

.right {
  display: flex;
  width: 48%;
  height: 100%;
  align-items: center;
}

.shield {
  color: #b6b7b7;
  background: white;
  display: flex;
  align-items: center;
  width: 100%;
  height: 70%;
  position: relative;
}
.shield  text{
 margin-left: 60rpx;
}

.deleteLetter { 
  /* transform: translateX(150rpx); */
  will-change: transform;
  color: #fff;
  background: #f45140;
  display: flex;
  align-items: center;
  width: 70%;
  height: 100%;
  top: 0;
  left: 0;
  position: absolute;
}

.detail {
  height: 180rpx;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
 
}

.name-comment {
  display: flex;
  flex-direction: column;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.name-comment {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.name {
  color: white;
}

.comment {
  margin-top: 10rpx;
  color: #b6b7b7;
  width: 420rpx;
}

.time-number {
  display: flex;
  margin-right: 30rpx;
}

.time {
  margin-right: 20rpx;
  color: white;
  font-size: 28rpx;
}

.number {
  font-size: 28rpx;
  display: block;
  background: #cc1a00;
  border-radius: 50%;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  color: white;
  text-align: center;
  box-sizing: border-box;
}
