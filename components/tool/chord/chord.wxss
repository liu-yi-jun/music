/* components/tool/chord/chord.wxss */
.bar {
  display: flex;
  padding: 0 50rpx;
  box-sizing: border-box;
}

.yukri,
.guitar {
  width: 129rpx;
  height: 43rpx;
  border-radius: 999rem;
  background-color: #C46CEE;
  color: white;
  box-shadow: 6rpx 6rpx 3rpx 1rpx rgba(0, 0, 0, 0.1);
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.yukri {
  margin-left: 30rpx;
}

.chord {
  padding-top: 2vh;
}

.active {
  background-color: white;
  color: #C46CEE;
}

.chordChart {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-top: 3.24vh;
  min-height: 600rpx;
  position: relative;
}

.chordChart>image {
  width: 325rpx;
  height: 325rpx;
  /* background-color: rgba(0, 0, 0, 0.1); */
  margin: -12rpx 0rpx -12rpx 31rpx;
}

.key,
.suffixe {
  padding: 4rpx 20rpx;
  border: 1rpx solid white;
  color: white;
  font-size: 22rpx;
  border-radius: 999rem;
}

.suffixesWrap,
.keysWrap {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 60rpx;
  padding: 0rpx 20rpx 5.24vh;
}

.keys-suffixes {
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  padding-bottom: 120rpx;
  margin-top: 1.49vh;
}

.keyText,
.suffixeText {
  display: flex;
  margin-top: 1.49vh;
}

/* .keyText > view,.suffixeText > view {
  margin: 0 30rpx;
} */
.keyText {
  width: 650rpx;
  overflow: hidden;
  height: 80rpx;
  position: relative;
}

.ul {
  white-space: nowrap;
  display: flex;
  transition: all .2s;
}

.li {
  display: flex;
  width: 130rpx;
  /* text-align: center; */
  align-items: center;
  justify-content: center;
  transition: all .3s;
}

.lis {
  display: flex;
  width: 216rpx;
  /* text-align: center; */
  align-items: center;
  justify-content: center;
  transition: all .3s;
}




.left,
.right {
  width: 80rpx;
  height: 80rpx;
  margin-top: 6rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 24rpx 27rpx;
  position: absolute;
}

.left {
  left: 32%;
}

.right {
  right: 32%;
}
.lefts {
  left: 24%;
}
.rights {
  right: 24%;
}

.seleteKey {
  font-size: 70rpx;
  color: white;
  position: relative;
  top: 0rpx;

}

.seleteSuffix {
  font-size: 50rpx;
  color: white;
  position: relative;
  top: 0rpx;
}

.near {
  opacity: 0.6;
  position: relative;
  top: 8rpx;
  font-size: 60rpx;
}

.nears {
  opacity: 0.6;
  position: relative;
  top: 6rpx;
  font-size: 45rpx;
}

.nearLeft {
  right: 20rpx;
}

.nearRight {
  left: 20rpx;
}

.far {
  opacity: 0.4;
  position: relative;
  top: 15rpx;
  font-size: 55rpx;
}

.other {
  opacity: 0.2;
  position: relative;
  top: 16rpx;
  font-size: 50rpx;
}

.swiper {
  height: 100%;
  width: 100%;
}

swiper-item {
  /* border: 1rpx solid white; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-item-inner {
  text-align: center;
  transition: all .4s;
  /* border: 1rpx solid white; */
}

.mp-loading {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}