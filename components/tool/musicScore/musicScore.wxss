.number {
  font-size: 42rpx;
}

.name {
  font-size: 30rpx;
  margin: 0 10rpx 0 10rpx;
}

.author {
  font-size: 18rpx;
}

.fire {
  width: 20rpx;
  height: 22rpx;
  margin-right: 6rpx;
}

.fireWrap {
  margin-left: 30rpx;
  border-radius: 999rem;
  background: rgba(255, 255, 255, 0.8);
  color: #E86464;
  font-size: 20rpx;
  padding: 0rpx 10rpx;
  display: flex;
  align-items: center;
}

.searchText {
  width: 106rpx;
  height: 56rpx;
  line-height:56rpx;
  margin-left: 20rpx;
  text-align: center;
  color: white;
  font-size: 26rpx;
  background-color: #AD7AE0;
  border-radius: 999rem;
  box-shadow: 0rpx 0rpx 10rpx 4rpx rgba(0, 0, 0, .1);
  letter-spacing: 8rpx;
  text-indent: 8rpx;
}