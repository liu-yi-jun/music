/* components/tool/musicScore/musicScore.wxss */
.musicScore {
  width: 100%;
  /* height: 100%; */
  display: flex;
  flex-direction: column;
}
.wrap {
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 14rpx 30rpx 40rpx;
  display: flex;
  margin-top: 30rpx;
  justify-content: space-between;
  align-items: center;
}


.logo-search {
  display: flex;
  align-items: center;
}

.logo {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.search {
  width: 340rpx;
  height: 60rpx;
  box-sizing: border-box;
  color: black !important;
  padding: 0 30rpx 0 60rpx;
  background: #e2e2e2;
  border-radius: 999rem;
}

.searchLog {
  width: 30rpx;
  height: 32rpx;
  position: absolute;
  left: 18rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}

.searchWrap {
  position: relative;
}


.circular {
  margin: 70rpx 0;

  /* position: absolute; */
  position: relative;
  border-radius: 50%;
  /* width: 127rpx;
  height: 127rpx;
  background: linear-gradient(-100deg, rgba(226, 145, 227, 1), rgba(0, 69, 207, 1));
  left: 333rpx; 
  top: 132rpx; */
  animation-iteration-count: infinite;
  animation-direction: alternate;
  animation-timing-function: linear;

}

@keyframes shake {
  from {
    transform: translateX(0) translateY(-10rpx);
  }

  to {
    transform: translateX(0) translateY(10rpx);
  }
}

.circular .top {
  color: white;
  position: absolute;
  display: block;
  top: -60rpx;
  align-items: flex-end;
  display: flex;
  white-space: nowrap;
}

