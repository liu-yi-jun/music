/* components/square/band/composeBand/composeBand.wxss */
.components {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 0 15rpx;
  box-sizing: border-box;
}

.part {
  width: 340rpx;
  height: 335rpx;
  border-radius: 20rpx;
  background-color: white;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  margin: 10rpx 10rpx 20rpx 10rpx;
  overflow: hidden;
}

.partHead {
  display: flex;
  margin-top: 10rpx;
}

.existWrap {
  border-radius: 6rpx;
  border: 1px solid #AB85D9;
  color: #727171;
}

.recruit {
  border-radius: 6rpx;
  border: 1px solid #AB85D9;
  background-color: #AB85D9;
  color: #FFFFFF;
}
.existWrap,.recruit {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18rpx;
  width: 52rpx;
  height: 33rpx;
  margin-top: 10rpx;
}

.line {
  width: 100%;
  margin-left: 10rpx;
  height: 2rpx;
  background-color: #727171;

}

.groupName {
  font-size: 24rpx;
  word-break: keep-all;
  color: #727171;
}

.partHead {
  display: flex;
  align-items: center;
}

.issueDynamicInner {
  width: 70%;
  height: 70%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

.issueDynamic {
  width: 233rpx;
  height: 233rpx;
  position: fixed;
  bottom: calc(0rpx + env(safe-area-inset-bottom));
  right: -16rpx;
}

.instrumentsWrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 18rpx;
}
.instruments {
  width: 60rpx;
  height: 60rpx;
}
.instrumentsName {
  font-size: 16rpx;
  word-break: keep-all;
}
.instrumentsRow {
  display: flex;
}