/* components/home/group/groupList/groupList.wxss */
.card {
  padding-bottom: 60rpx;
  display: flex;
  justify-content: flex-end;
}

.first {
  margin-top: 20rpx;
}

.block {
  position: relative;
  display: flex;
  align-items: center;
  width: 729rpx;
  height: 270rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 999rem;
  border-top-left-radius: 999rem;
  background: linear-gradient(to left, rgba(226, 145, 227, 1), rgba(0, 69, 207, 1));
}

.communityLogo {
  margin-left: 36rpx;
  width: 202rpx;
  height: 202rpx;
  border-radius: 50%;
}

.introduce {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 70%;
  margin-left: 70rpx;
}

.top {
  color: white;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 328rpx;
}

.bottom {
  color: white;
  font-size: 24rpx;
  line-height: 28rpx;
  width: 278rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  color: rgba(255, 255, 255, 0.8);
}

.communityName {
  font-size: 32rpx;
  font-family: 'SH-Bold';
}

.member-invitation {
  font-size: 24rpx;
  /* margin-top: 10rpx; */
  display: flex;
  align-items: center;
}

.point {
  margin: 0 10rpx;
  background: white;
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
}

.follow {
  width: 58rpx;
  height: 50rpx;
  position: absolute;
  right: 44rpx;
  bottom: 41rpx;
}


.join {
  position: absolute;
  width: 170rpx;
  height: 170rpx;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
}

.success {
  position: absolute;
  width: 72rpx;
  height: 56rpx;
  right: 48rpx;
  top: 50%;
  transform: translateY(-50%);
}

