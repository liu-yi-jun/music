/* components/home/course/courseList/courseList.wxss */

.learnGuitarList {
  box-sizing: border-box;
  padding: 10rpx 40rpx 100rpx;
}

.card {
  margin-bottom: 60rpx;
  position: relative;
  width: 100%;
  background: white;
  /* height: 370rpx; */
  border-radius: 20rpx;
  overflow: hidden;
}

.wallimg {
  /* width: 632rpx; */
  width: 100%;
  height: 100%;
}

.img {
  width: 100%;
  height: 208rpx;
  overflow: hidden;
}

.content {
  width: 100%;
  min-height: 80rpx;
  box-sizing: border-box;
  padding: 18rpx 23rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.userName {
  font-size: 20rpx;
  display: block;
}

.organization {
  /* font-weight: bold; */
  color: white;
  margin-top: 6rpx;
  font-size: 15rpx;
  padding: 6rpx 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #b37ae5;
  border-radius: 999em;
  height: 16rpx;
}

.userNameOrganization {
  display: flex;
  align-items: center;
  flex-direction: column;
  position: absolute;
  top: 330rpx;
  width: 190rpx;
  right: 9rpx;
}

.avatarBackground {
  width: 100%;
  height: 100%;
  position: relative;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  position: absolute;
  border-radius: 50%;
}

.avatarWrap {
  width: 131rpx;
  height: 134rpx;
  top: 142rpx;
  right: 15rpx;
  position: absolute;
}

.advance {
  width: 100%;
}

.title {
  font-size: 28rpx;
  width: 75%;
  line-height: 27rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
  font-family: 'SH-Bold';
}

.iconWrap {
  font-size: 24rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
  color: #808080;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}
.store image {
  width: 26rpx;
  height: 26rpx;
}
.store, .views  {
  display: flex;
  align-items: center;
}
.views image {
 width: 30rpx;
  height: 20rpx;
}

.iconWrap text {
  margin-left: 8rpx;
}

.iconWrap view {
  display: flex;
  align-content: center;
  margin-right: 20rpx;
}

.blank {
  height: 200rpx;
}
