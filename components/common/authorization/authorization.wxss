/* components/common/authorization/authorization.wxss */

.shade {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  /* background: rgba(0, 0, 0, 0.3); */
  z-index: 9999999;
  opacity: 0;
  visibility: hidden;
  transition: 0.4s all;
}
.shadeShow {
  opacity: 1;
  visibility: visible;
}

.dialog {
  width: 575rpx;
  height: 530rpx;
  box-sizing: border-box;
  padding: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  top: 50%;
  /* bottom: 0; */
  /* top: 40%; */
  left: 50%;
  /* right: 0; */
  /* margin: auto; */
  transform: translate(-50%,-50%);
  border-radius: 40rpx;
  background: linear-gradient(to bottom, rgba(226, 145, 227, 0.8), rgba(0, 69, 207, 0.8));

}
.miniLogo-musicmonster {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.miniLogo {
  width: 120rpx;
  height: 122rpx;
}
.musicmonster {
  width: 324rpx;
  height: 25rpx;
  margin-top: 40rpx;
}

.buttonWrap{
  width: 100%;
  display: flex;  
  justify-content: space-between;
}

.btn {
  width: 205rpx!important;
  height: 75rpx!important;
  border-radius: 999rem;
  font-size: 28rpx!important;
  line-height: normal!important;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancel {
  background: #D9DADA!important;
  color: #727171!important;
}
.confirm {
  background: #74E874!important;
  color: #727171!important;
}

.checkbox-group {
  color: white;
  font-size: 26rpx;
  margin-top: 22rpx;
  display: flex;
align-items: flex-start;
}
.checkbox-group text {
  vertical-align: middle;
  word-break: break-all;
}

.checkbox-group checkbox {
  transform: scale(0.8,0.8);
  margin-right: 5rpx;
  vertical-align: middle;
}

.stress {
  color:red;
}
