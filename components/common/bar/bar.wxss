/* components/common/bar/bar.wxss */
.bar {
  position: relative;
  /* height: 85rpx; */
  display: flex;
  box-sizing: border-box;
  align-items: flex-start;
  width: 100%;
  /* margin-top: 100rpx; */

}

.active {
  border-bottom: 6rpx solid #aa7edf;
  font-family: 'SH-Bold';
}

.not {
  font-family: 'SH-Normal';
}

.portion {
  padding: 0px 6rpx 4rpx;
  color: white;
  position: relative;
}

.red {
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #FA5151;
  right: -8rpx;
  top: -6rpx;
}